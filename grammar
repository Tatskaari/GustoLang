program => (statement)*

statement => if | while | codeBlock | function | return | valueDeclaration | input | output | assignment

if => "if" expression "do" (statement)* ("else" (statement)*)? "end"
while => "while" expression "do" (statement)* "end"
codeBlock => "do" program "end"
function => STRING "(" (STRING (",")*)* ")" codeBlock
return => "return" expression
valueDeclaration => "val" STRING ":=" expression
assignment => STRING ":=" expression
input => "input" STRING
output => "output" expression




listDeclaration = "[" expressionList "]"
expressionList =  (expression (",")*)*

expression => logical
logical => equality ( ( "and" | "or" ) equality )*
equality => comparison ( ( "!=" | "==" ) comparison )*
comparison => addition ( ( ">" | ">=" | "<" | "<=" ) addition )*
addition => multiplication ( ( "-" | "+" ) multiplication )*
multiplication => unary ( ( "/" | "*" ) unary )*
unary => ( "!" | "-" ) unary | primary ("[" expressionList "]" | "(" expressionList ")")*
primary => NUMBER | STRING | "false" | "true" | "(" expression ")" | listDeclaration
